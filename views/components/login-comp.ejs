<div class="container register-form">
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="username">Username</label><br>
            <input type="text" name="username" placeholder="Username" class="form-control" value="1">
        </div>

        <div class="form-group">
            <label for="password">Password</label><br>
            <input type="password" name="password" placeholder="Password" class="form-control" value="1">
        </div>

        <button type="submit" class="btn btn-success login-btn">Login</button>
    </form>
</div>
